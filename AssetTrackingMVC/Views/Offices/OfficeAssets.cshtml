@{
}

<h1>@Model.Country office assets</h1>

<table class="table">
    <thead>
    <tr>
        <th>Type</th>
        <th>Brand</th>
        <th>Model</th>
        <th>Office</th>
        <th>Purchase Date</th>
        <th>Price in USD</th>
        <th>Currency</th>
    </tr>
    </thead>
    <tbody>
    @foreach(var item in @Model.Assets)
    {
        <tr>
            <td>
                @item.Type 
            </td>
            <td>    
                @item.Brand 
            </td>
            <td>
                @item.Model 
            </td>
            <td>
                @item.Office.Country 
            </td>
            <td>
                @item.PurchaseDate.ToShortDateString() 
            </td>
            <td>
                @item.Price 
            </td>
            <td>@item.Office.Currency</td>
        </tr>
    }
    </tbody>
    <tfoot></tfoot>
</table>