@{
}

<h1>@Model.Country office assets</h1>

<table class=table-sm">
    @foreach(var item in @Model.Assets)
    {
        <tr>
            <td>
                @item.Type 
            </td>
            <td>    
                @item.Brand 
            </td>
            <td>
                @item.Model 
            </td>
            <td>
                @item.Office.Country 
            </td>
            <td>
                @item.PurchaseDate.ToShortDateString() 
            </td>
            <td>
                @item.Price 
            </td>
            <td>@item.Office.Currency</td>
        </tr>
    }
</table>