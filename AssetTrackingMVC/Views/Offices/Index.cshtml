@model List<Office>

@*
    For more information on enabling MVC for empty projects, visit https://go.microsoft.com/fwlink/?LinkID=397860
*@
@{
}

<h1>List of our offices</h1>

@*Displaying the contents of the ViewData object*@
@ViewData["OfficeInfo"]

<div>
    Office list ...
</div>

<table class="table-sm">
    <thead>
        <tr>
            <th>Country</th>
            <th>Currency</th>
            <th>Details</th>
            <th>Assets</th>
        </tr>
    </thead>
    <tbody>
        @foreach(var item in Model){
            <tr>
                <td>@item.Country</td>
                <td>@item.Currency</td>
                <td>
                    <a asp-action="Details" asp-route-id="@item.Id">Details</a>
                </td>
                <td>
                    <a asp-action="OfficeAssets" asp-route-id="@item.Id">Assets</a>
                </td>
            </tr>
        }
    </tbody>
</table>