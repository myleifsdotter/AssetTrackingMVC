@model List<Office>

@*
    For more information on enabling MVC for empty projects, visit https://go.microsoft.com/fwlink/?LinkID=397860
*@
@{
}

<h1>List of our offices</h1>

@*Displaying the contents of the ViewData object*@
@ViewData["OfficeInfo"]

<table class="table">
    <thead>
        <tr>
            <th>Country</th>
            <th>Currency</th>
            <th>Details</th>
            <th>Assets</th>
            <th>Delete</th>
        </tr>
    </thead>
    <tbody>
        @foreach(var item in Model){
            <tr>
                <td>@item.Country</td>
                <td>@item.Currency</td>
                <td>
                    <a asp-action="Details" asp-route-id="@item.Id">Details</a>
                </td>
                <td>
                    <a asp-action="OfficeAssets" asp-route-id="@item.Id">Assets</a>
                </td>
                <td>
                    <a asp-action="DeleteOffice" asp-route-id="@item.Id">Delete</a>
                </td>
            </tr>
        }
    </tbody>
    <tfoot>
        <tr><td><a asp-action="AddOffice" >Add an office</a></td></tr>
    </tfoot>
</table>