@{
}

<form asp-action="EditAsset">
    <input type="hidden" name="id" value="@Model.Id" /><br />
    Type: <input type="text" name="type" value="@Model.Type" /><br />
    Brand: <input type="text" name="brand" value="@Model.Brand" /><br />
    Model: <input type="text" name="model" value="@Model.Model" /><br />
    Purchase date: <input type="text" name="purchasedate" value="@Model.PurchaseDate.ToShortDateString()" /><br />
    Price in USD: <input type="number" step="0.01" min="0" name="price" value="@Model.Price" /><br />
    Office: <select asp-for="OfficeId" name="officeid" asp-items="ViewBag.OfficeId"></select><br />
    <input type="submit" value="Update" />
</form>