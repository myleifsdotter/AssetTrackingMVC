<h1>Add a new asset</h1>


<form asp-action="AddAsset">
    Type: <input type="text" name="type" /><br />
    Brand: <input type="text" name="brand" /><br />
    Model: <input type="text" name="model" /><br />
    Purchase date: <input type="date" name="purchasedate" /><br />
    Price in USD: <input type="number" step="0.01" min="0" name="price" /><br />
    Office: <select asp-for="OfficeId" name="officeid" asp-items="ViewBag.OfficeId"></select><br />
    <input type="submit" value="AddAsset" />
</form>